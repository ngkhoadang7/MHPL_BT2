<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<style>
.dropdown:hover>.dropdown-menu {
    display: block;
}

.dropdown>.dropdown-toggle:active {
    /*Without this, clicking will make it sticky*/
    pointer-events: none;
}
</style>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tour Du Lịch", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown nav-item">
                        <a>
                            <div class=" dropdown-toggle nav-link" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Quản lý Tour
                            </div>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                @Html.ActionLink("Tour", "Index", "tours", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Giá", "Index", "tourGia", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Loại Tour", "Index", "tourLoai", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Địa điểm", "Index", "tourDDiem", null, new { @class = "dropdown-item" })
                            </div>
                        </a>
                    </li>
                    <li class="dropdown nav-item">
                        <a>
                            <div class=" dropdown-toggle nav-link" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Quản lý Đoàn
                            </div>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                @Html.ActionLink("Đoàn", "Index", "tourDoan", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Danh sách người đi", "Index", "tourNDi", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Chi phí", "Index", "tourCPhi", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Loại chi phí", "Index", "tourLCPhi", null, new { @class = "dropdown-item" })
                            </div>
                        </a>
                    </li>
                    <li class="dropdown nav-item">
                        <a>
                            <div class=" dropdown-toggle nav-link" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Quản lý Nhân sự
                            </div>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                @Html.ActionLink("Nhân viên", "Index", "tourNVien", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Khách hàng", "Index", "tourKHang", null, new { @class = "dropdown-item" })
                            </div>
                        </a>
                    </li>
                    <li class="nav-item">@Html.ActionLink("Thống kê", "Index", "ThongKe")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
