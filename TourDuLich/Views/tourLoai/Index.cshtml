@model IEnumerable<TourDuLich.Models.tour_loai>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách loại Tour</h2>

<p>
    @Html.ActionLink("Thêm mới loại Tour", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.loai_ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.loai_mota)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.loai_ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.loai_mota)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.loai_id })
        </td>
    </tr>
}

</table>
