@model IEnumerable<TourDuLich.Controllers.tourNDiController.ViewModelIndex>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách người đi theo đoàn</h2>

<p>
    @Html.ActionLink("Thêm danh sách", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Đoàn
        </th>
        <th>
            Số nhân viên theo đoàn
        </th>
        <th>
            Số khách hàng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.doan_name
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.soNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.soKH)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.tour_nguoidi.nguoidi_id  }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.tour_nguoidi.nguoidi_id }) 
        </td>
    </tr>
}

</table>
