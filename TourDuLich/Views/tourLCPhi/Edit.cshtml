@model TourDuLich.Models.tour_loaichiphi

@{
    ViewBag.Title = "Edit";
}

<h2>Sửa Loại chi phí</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.cp_id)

        <div class="form-group">
            @Html.LabelFor(model => model.cp_ten, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cp_ten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cp_ten, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cp_mota, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.cp_mota, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cp_mota, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-5" style="float:left">
                <input type="submit" value="Lưu thông tin" class="btn btn-success" style="float:right" />
                @Html.ActionLink("Xóa", "Delete", new { id = Model.cp_id }, htmlAttributes: new { @class = "btn btn-danger", @role = "button"})
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại danh sách Loại chi phí", "Index")
</div>
