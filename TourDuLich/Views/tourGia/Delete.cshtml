@model TourDuLich.Models.tour_gia

@{
    ViewBag.Title = "Delete";
}
<h2>Bạn có chắc muốn xóa Giá này?</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tour
        </dt>

        <dd>
            @ViewBag.tourTen
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.gia_sotien)
        </dt>

        <dd>
            @ViewBag.gia VND
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.gia_tungay)
        </dt>

        <dd>
            @Model.gia_tungay.ToString("dd/MM/yyyy")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.gia_denngay)
        </dt>

        <dd>
            @Model.gia_denngay.ToString("dd/MM/yyyy")
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </div>
    }

    <div style="margin-top: 30px">
        @Html.ActionLink("Quay lại danh sách Giá", "Index")
    </div>
</div>
